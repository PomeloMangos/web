@model IEnumerable<Realm>
@{ 
    ViewBag.Title = "服务器状态";
}
<div class="container">
    <div id="wp" class="wp">
        @await Html.PartialAsync("_Banner")
        <div class="main">
            @await Html.PartialAsync("_HomeNav")
            <div class="right">
                <div class="block">
                    <table class="realm-table">
                        <thead>
                            <tr>
                                <th>服务器</th>
                                <th>类型</th>
                                <th>状态</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in Model)
                            {
                                <tr>
                                    <td>@x.Name</td>
                                    <td>@x.Icon.ToString()</td>
                                    <td>@(x.Status.HasFlag(RealmStatus.Offline) ? "离线" : "在线")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
</div>
