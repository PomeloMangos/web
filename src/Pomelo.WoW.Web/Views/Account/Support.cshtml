@model IEnumerable<CustomCurrency>
@{
    ViewBag.Title = "我要赞助";
}
<div class="container">
    <div id="wp" class="wp">
        <div class="main">
            <div class="left2">
                <div class="account-main">
                    <div class="account-title">我要赞助</div>
                    <div>查看各个货币余额以及赞助柚子魔兽。</div>
                    <table class="realm-table" style="margin: 30px 0;">
                        <colgroup>
                            <col />
                            <col />
                            <col />
                        </colgroup>
                        <thead>
                            <tr>
                                <th>币种</th>
                                <th>拥有量</th>
                                <th>说明</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in Model)
                            {
                            <tr>
                                <td>@x.Name</td>
                                <td>@x.Amount</td>
                                <td>@x.Comment</td>
                            </tr>
                            }
                        </tbody>
                    </table>

                    <div class="account-title">赞助卡</div>
                    <div>使用赞助卡赞助柚子魔兽。</div>
                    <form method="post" style="width: 60%">
                        <div class="register-form-item">
                            <label>
                                卡号
                                <input type="text" name="card" autocomplete="off" class="parameter-textbox" />
                            </label>
                        </div>
                        <div class="register-form-item">
                            <label>
                                密码
                                <input type="password" name="password" autocomplete="off" class="parameter-textbox" />
                            </label>
                        </div>
                        <div class="banner-buttons" style="margin-top: 50px">
                            <input type="submit" class="large-button" value="赞助" />
                            <a target="_blank" href="http://6afk.com/shop/y7ngogo8b3x05f4n411zpf5" style="margin-left: 30px">购买赞助卡</a>
                        </div>
                    </form>
                </div>
            </div>
            @await Html.PartialAsync("_AccountNav")
            <div class="clear"></div>
        </div>
    </div>
</div>